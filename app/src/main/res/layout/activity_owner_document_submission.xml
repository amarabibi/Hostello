<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="#FFFFFF">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/host_logo_02"
                    android:contentDescription="Hostel Icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Hostel Details Submission"
                    android:textColor="#1976D2"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="Fill in your hostel information"
                    android:textColor="#616161"
                    android:textSize="15sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Basic Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_info"
                    android:drawablePadding="8dp"
                    android:text="Basic Information"
                    android:textColor="#1976D2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableTint="#1976D2" />

                <!-- Hostel Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Hostel Name"
                    android:textColor="#1976D2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1976D2"
                    app:hintTextColor="#1976D2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHostelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter hostel name"
                        android:inputType="textCapWords"
                        android:textColor="#1565C0"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hostel Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Hostel Address"
                    android:textColor="#1976D2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="#1976D2"
                    app:hintTextColor="#1976D2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHostelAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter complete address"
                        android:inputType="textPostalAddress"
                        android:textColor="#1565C0"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Facilities -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Facilities Available"
                    android:textColor="#1976D2"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#1976D2"
                    app:hintTextColor="#1976D2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFacilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:hint="WiFi, Mess, Laundry, Security etc."
                        android:inputType="textMultiLine|textCapSentences"
                        android:minLines="3"
                        android:textColor="#1565C0"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Images Upload Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_image"
                    android:drawablePadding="8dp"
                    android:text="Upload Images"
                    android:textColor="#1976D2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:drawableTint="#1976D2" />

                <!-- Room Images -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/upload_section_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Hostel Room Images"
                        android:textColor="#1976D2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnRoomImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1976D2"
                        android:drawableStart="@drawable/ic_upload"
                        android:drawablePadding="8dp"
                        android:paddingVertical="12dp"
                        android:text="Upload Room Images"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_upload"
                        app:iconTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvRoomImagesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="No images selected"
                        android:textColor="#1976D2"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Furniture Images -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/upload_section_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Furniture Images"
                        android:textColor="#1976D2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnFurnitureImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1976D2"
                        android:drawableStart="@drawable/ic_upload"
                        android:drawablePadding="8dp"
                        android:paddingVertical="12dp"
                        android:text="Upload Furniture Images"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_upload"
                        app:iconTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvFurnitureImagesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="No images selected"
                        android:textColor="#1976D2"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Facilities Images -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/upload_section_bg"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Facilities Images"
                        android:textColor="#1976D2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnFacilityImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#1976D2"
                        android:drawableStart="@drawable/ic_upload"
                        android:drawablePadding="8dp"
                        android:paddingVertical="12dp"
                        android:text="Upload Facilities Images"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_upload"
                        app:iconTint="#FFFFFF" />

                    <TextView
                        android:id="@+id/tvFacilityImagesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="No images selected"
                        android:textColor="#1976D2"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#1976D2"
            android:paddingVertical="14dp"
            android:text="Submit Hostel Details"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            />

    </LinearLayout>
</ScrollView>