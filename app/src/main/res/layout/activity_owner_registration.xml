<?xml version="1.0" encoding="utf-8"?>
<!--
    IMPORTANT: This file should be saved as:
    res/layout/activity_owner_registration.xml

    It contains all the required IDs that your Java code expects.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¢ Hostel Registration"
                    android:textColor="#1565C0"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fill in the details below to list your hostel"
                    android:textColor="#757575"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Basic Information Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textColor="#1565C0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Hostel Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel Name *"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="Enter hostel name"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Price -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Rent *"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="e.g. 12000"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    app:prefixText="PKR ">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Address *"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="Street, Area, City"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:minLines="2"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="20dp" />

                <!-- Hostel Details Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hostel Details"
                    android:textColor="#1565C0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Type and Room Type Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="18dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hostel Type"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Boys/Girls"
                            app:boxStrokeColor="#1565C0"
                            app:hintTextColor="#1565C0">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Room Type"
                            android:textColor="#424242"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g. 2-Seater"
                            app:boxStrokeColor="#1565C0"
                            app:hintTextColor="#1565C0">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRoomType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="20dp" />

                <!-- Amenities Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities &amp; Facilities"
                    android:textColor="#1565C0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Amenity 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Amenity"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="e.g. WiFi, AC, Generator"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmenity1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Amenity 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secondary Amenity"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="e.g. UPS, Hot Water, Parking"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAmenity2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- All Facilities -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Facilities"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="Separate with commas"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    app:helperText="e.g. WiFi, AC, Laundry, Meals, Security">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFacilities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="20dp" />

                <!-- Contact Information Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textColor="#1565C0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number *"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:hint="03XX-XXXXXXX"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0"
                    app:prefixText="+92 ">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="your@email.com"
                    app:boxStrokeColor="#1565C0"
                    app:hintTextColor="#1565C0">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Required Fields Note -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* Required fields"
                    android:textColor="#757575"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center" />

                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveHostel"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Save and Continue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#1565C0"
                    android:elevation="4dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>
</ScrollView>