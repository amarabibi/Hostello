<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section: Deep Blue -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#1565C0"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Decorative background element -->
            <View
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@android:drawable/ic_menu_gallery"
                android:backgroundTint="#FFFFFF"
                android:alpha="0.08"
                android:layout_marginBottom="-110dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                app:cardCornerRadius="55dp"
                app:cardElevation="16dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ‘¤"
                    android:textSize="52sp"
                    android:background="@color/white"
                    android:textColor="#1565C0" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Hostello"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold"
                android:letterSpacing="0.03" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your gateway to perfect stays"
                android:textColor="#E3F2FD"
                android:textSize="14sp"
                android:layout_marginTop="6dp" />

        </LinearLayout>

        <!-- Main Content Area with Overlap -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="-45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="24dp">

                <!-- Primary Action Buttons -->
                <Button
                    android:id="@+id/botn_buy_sell"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Create Account"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1565C0"
                    android:elevation="4dp"
                    android:layout_marginBottom="14dp" />

                <Button
                    android:id="@+id/botn_buy_sell2"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:elevation="3dp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:backgroundTint="#F5F9FC"
                    android:layout_marginBottom="24dp"/>

                <!-- Enhanced Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  OR CONNECT WITH  "
                        android:textColor="#9E9E9E"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.15"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:layout_weight="1"
                        android:background="#E0E0E0" />
                </LinearLayout>

                <!-- Social Logins: TINTS REMOVED TO SHOW ORIGINAL ICONS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Google -->
                    <LinearLayout
                        android:id="@+id/googleLogin"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#F0F2F5"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:layout_marginBottom="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/google"
                            android:contentDescription="Google" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continue with Google"
                            android:textColor="#37474F"
                            android:textStyle="bold"
                            android:layout_marginStart="14dp"/>
                    </LinearLayout>

                    <!-- Facebook -->
                    <LinearLayout
                        android:id="@+id/facebookLogin"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#F0F2F5"
                        android:elevation="3dp"
                        android:padding="10dp"
                        android:layout_marginBottom="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/facebook"
                            android:contentDescription="Facebook" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Continue with Facebook"
                            android:textColor="#1877F2"
                            android:textStyle="bold"
                            android:layout_marginStart="14dp"/>
                    </LinearLayout>

                    <!-- WhatsApp -->
                    <LinearLayout
                        android:id="@+id/whatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:background="#F0F7F0"
                        android:padding="10dp"
                        android:layout_marginBottom="14dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/whatsapp"
                            android:contentDescription="WhatsApp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Link via WhatsApp"
                            android:textColor="#2E7D32"
                            android:textStyle="bold"
                            android:layout_marginStart="14dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Footer Note -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="By continuing, you agree to our\nTerms of Service and Privacy Policy"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>