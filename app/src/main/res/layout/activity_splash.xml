<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Your PNG Logo -->
    <ImageView
        android:id="@+id/hostello_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/host_logo_02"
        android:scaleType="fitCenter"
        android:contentDescription="Hostello Logo" />

    <!-- Optional: Tagline or subtext below logo -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hostello_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Your Home Away From Home"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:alpha="0" />

</RelativeLayout>