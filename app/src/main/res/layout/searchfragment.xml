<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SearchFragment">

    <!-- Initial card to click to search -->
    <LinearLayout
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/search_card_background"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Hostels"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Search bar, hidden initially -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Type hostel name..."
        android:visibility="gone"
        android:iconifiedByDefault="false"
        android:layout_marginTop="12dp"/>

    <!-- RecyclerView for hostels, hidden initially -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hostelRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_marginTop="12dp"/>
</LinearLayout>
