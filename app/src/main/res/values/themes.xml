<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.Hostello" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
    </style>

    <!-- Main Theme - inherits from Base.Theme.Hostello -->
    <style name="Theme.Hostello" parent="Base.Theme.Hostello" />

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>
    <!-- TextInputLayout Style with Black Border -->
    <style name="BlackBorderTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/black</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Filled Button Style (Primary) -->
    <style name="FilledButtonStyle">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">#1565C0</item>
    </style>

    <!-- Outlined/Unfilled Button Style with Border -->
    <style name="OutlinedButtonStyle">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#1565C0</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <!-- Text style for filled buttons -->
    <style name="FilledButtonTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Text style for outlined buttons -->
    <style name="OutlinedButtonTextStyle">
        <item name="android:textColor">#1565C0</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>